" syntax highlighting
syntax on

" show hybrid line numbers
set relativenumber
set number

" configure tabs
set expandtab
set smarttab
set shiftwidth=2
set softtabstop=2
set tabstop=2"

" configure special characters
" set listchars=eol:$,tab:>-,trail:~,extends:>,precedes:<
" set list

" search highlight
set hlsearch

" mapping keys
let mapleader=','
:inoremap jk <esc>

" load plugins
source ~/.dotfiles/vim/plugins.vim
